<%= form_for(@intern) do |f| %>
    <% if @intern.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@intern.errors.count, "error") %> prohibited this intern from being saved:</h2>

          <ul>
            <% @intern.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


    <div class="actions">
      <label>Name: </label>
      <%= f.text_field :name %>
    </div>

    <div>
      <label>University</label>
      <%= collection_select(:intern, :university_id, @university, :id, :name, :class => "university") %>
    </div>

    <div>
      <label>Major</label>
      <%= collection_select(:intern, :major_id, @major, :id, :name, :class => "major") %>
    </div>

    <div>
      <label>Graduation Year</label>

      <%= f.select :graduation_year, (2010..2020).to_a %>

    </div>

    <div>

      <label>Job You Like </label>
      <%= collection_select(:intern, :job_titles, @jobs, :id, :name, options ={:prompt => "-Select Jobs -"}, :class => "major", :multiple => true) %>

    </div>

    <div class="actions">
      <label>Email: </label>
      <%= f.email_field :email %>
    </div>

    <div class="actions">
      <label>Phone: </label>
      <%= f.text_field :contact_number %>
    </div>

    <div class="actions">
      <label>Linkedin Profile: </label>
      <%= f.text_field :linkedin_address %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
